{% extends 'base.html.twig' %}

{% block title %}Categories | {{category.name }}{% endblock %}

{% block body %}
    <h3 class='text-center text-info bg-white p-2'>{{ category.name}}</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
          
        </tbody>
    </table>


    <a class='btn btn-lg text-white disabled' href="{{ path('categorys_index') }}"><i class="fas fa-arrow-alt-circle-left"></i></a>
    <a class='btn btn-outline-info disabled' href="{{ path('categorys_edit', {'id': category.id}) }}">Modifier</a>

    {{ include('categorys/_delete_form.html.twig') }}
{% endblock %}
