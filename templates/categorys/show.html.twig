{% extends 'base.html.twig' %}

{% block title %}Categories | {{category.name }}{% endblock %}

{% block body %}
    <h3 class='text-center text-info bg-white p-2'>{{ category.name}}</h3>

    <table class="table text-dark bg-light">
        <tbody>
            <tr>
                <th>#</th>
                <td>NÂ°{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>{{ category.createdAt|date('d/m/Y H:i:s') }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src='{{ category.urlImg }}' alt="{{ category.description }}"></td>
            </tr>
        </tbody>
    </table>


   <div class="d-flex">
    <a class='btn btn-lg text-white' href="{{ path('categorys_index') }}"><i class="fas fa-arrow-alt-circle-left"></i></a>
    {% if is_granted('ROLE_ADMIN') %}
        <a class='btn btn-outline-info btn-lg' href="{{ path('categorys_edit', {'id': category.id}) }}"><i class="fas fa-edit"></i> Modifier</a>
        {{ include('categorys/_delete_form.html.twig') }}
    {% endif %}
   </div>
{% endblock %}
