{% extends 'base.html.twig' %}
{% block title %}Listes des pertataires{% endblock %}
{% block body %}
<h3 class='text-center text-info p-2 bg-white '>Tout les prestataires disponible</h3>
<div class='row p-3 m-1'>
{% for prestataire in prestataires %}
    <div class='col-4 p-2'>
        <div class="card text-center">
            <img class="card-img-top" src="{{ prestataire.urlLogo }}" alt="{{ prestataire.name }} image of logo">
            <div class="card-body">
                <h5 class="card-title bg-dark p-1"><a class='text-white' href='prestataires/{{ prestataire.id }}'>{{ prestataire.name }}</a></h5>
                <p class="card ">{{prestataire.descShort}}</p>
                <Adresse class='card bg-dark text-white'>
                        {{ prestataire.numStreet }}, {{ prestataire.nameSteet }} <br>
                        {{ prestataire.numPostal }} {{ prestataire.nameCity }} <br></address>
                <a href="prestataires/{{ prestataire.id }}" class="btn btn-info">Voir</a>
            </div>
        </div>
    </div>
{% endfor %}
{% endblock %}
