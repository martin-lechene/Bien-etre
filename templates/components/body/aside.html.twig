                    <aside class='text-white'>
                        <nav class="p-3 bg-dark row">
                        <div class=' col-md-12' id="login">
                                {% if app.user %}
                                    {# Si l'utilisateur est connecter #}                        
                                    {% if not app.user.IsVerified %}
                                        {# Si l'utilisateur a valider son compte #} 
                                            <img src="{{ app.user.img }}" alt="Votre photo de profil"  class="img-fluid rounded">
                                            <p class="text-center">{{ app.user.email }}</p>
                                            <div class="d-flex justify-content-center">
                                                <a class='btn btn-outline-info' href='{{ path("profil_index") }}'><i class="fas fa-user mr-3"></i> Mon profil</a>
                                                <a class='btn btn-danger' href='{{ path("app_logout") }}'><i class="fas fa-sign-out-alt mr-3"></i> Se déconnecter</a>
                                            </div>
                                    {% else %}
                                    {# Si l'utilisateur n'a pas valider son compte #}
                                        <img src="{{ app.user.img }}" alt="photo de profil de {{ app.user.email }}" class="img-fluid rounded text-center">
                                        <p class="p-2 text-danger text-center">
                                            Votre email ({{ app.user.email }}) n'a pas été validé.
                                        </p>
                                        <p class="p-2 text-danger text-center">
                                            <b>{{ app.user.email }}</b>
                                        </p>
                                        <p class="text-center">
                                            <a class='btn btn-outline-danger' href='{{ path("app_logout") }}'><i class="fas fa-sign-out-alt"></i> Se déconnecter</a>
                                        </p>
                                {% endif %}
                                {% else %}
                                {# Si l'utilisateur est pas connecter #}
                                <div class="text-center" id="login">
                                    <div class="align-items-center">
                                        <a href="{{path('app_register')}}" class="m-2 btn btn-outline-info"><i class="fas fa-user-plus"></i> Inscription</a>
                                        <a href="{{path('app_login')}}" class="m-2 btn btn-outline-info"><i class="fas fa-user-check"></i> Connexion</a>
                                    </div>
                                </div>
                        {% endif %}
                            </div>
                            <div class="col-md-12" id="search">
                                <div class="" id="search">
                                    <h4 class="p-1 text-center" id="search-title">Rechercher</h4><br>                 
                                    {{ 
                                        render(controller(
                                            'App\\Controller\\SearchController::searchBar'
                                        ))
                                    }}
                            <div class="col-md-12" id="search">
                                <div class="" id="search">
                                    <h4 class="p-1 text-center" id="search-title">Rechercher</h4><br>
                                    <form action="search" method="post" class="">
                                        
                                        <div class="form-group">
                                            <label>Nom du prestataire</label>
                                            <input name="name" type="text" class="form-control"/>
                                        </div>
                                        <div class="form-group">
                                            <label>Code postal</label>
                                            <input name="postalCode" type="number" class="form-control"/>
                                        </div>
                                        <div class="form-group">
                                            <label>Ville</label>
                                            <input name="localitie" type="text" class="form-control"/>
                                        </div>
                                        <div class="form-group ">
                                            <label>Catégories</label>
                                            <select name='category' id="category_select_search" class="form-select form-control" aria-label="-- No select --">
                                            <option class="text-dark" value='null'>Choisir une categories</option>
                                            {% for category in categorys %}
                                            <option class="text-dark" value='{{category.id}}'>{{category.name}}</option>
                                            {% endfor %}                            
                                    
                                            </select>
                                        </div>
                                        <div class="d-flex justify-content-center">
                                            <a type="submit" href="{{ path('search') }}" class="btn btn-info"><i class='fas fa-search'></i> Rechercher</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </nav>
                    </aside>